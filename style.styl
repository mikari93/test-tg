@import "fonts-colors.styl"

html
  height:100%
body
  background: bg-color
  font-family: font
  margin: 0
  height: calc(100% - 23px)
  padding-bottom: 23px
a
  text-decoration:none
.clearfix
  clear:both
.header
  width:1010px
  background: main-blue
  font-size: 14px
  line-height: 16px
  margin:0 auto
  a
    color: white;
    &:hover
      background: main-blue-hover
      color: white
.left
  width:313px
.right
  width:697px
.logo
  float:left
  vertical-align: top
  a
    display:block
    padding: 20px 25px
.rest
  float:left
.menu-icon
.search-icon
  float:right
  a
    color: white
    display: block
    padding: 20px 25px
.title
  overflow:hidden
  a
    display:block
    padding:20px 25px
    span.lastseen
      font-size:12px
      color:lastseen
.container
  width:1010px
  background: white
  margin:0 auto
  border: 1px solid border-color
  height: calc(100% - 56px)
.contacts
  border-right:1px solid border-color
  height:100%
  position:relative
  float:left
  .list
    height: calc(100% - 60px)
    overflow-y: scroll
    &::-webkit-scrollbar-track
      background-color: scrollbar-track
      margin-right: 10px
      border-radius: 2px
    &::-webkit-scrollbar
      width: 2px
    &::-webkit-scrollbar-thumb
      background: scrollbar-thumb
  .searchbox
    padding: 12px
    input[type=search]
      -webkit-appearance: none
    .searchinput
      font-size: 12px
      border:1px solid searchinput-color
      border-radius:2px
      padding:10px 20px
      background:searchinput-color
      width:100%
      outline-width:0
      &:active
      &:focus
        background:white
  ul
    list-style:none
    margin:0
    padding:0
    a
      display:block
      padding: 7px 16px
      &:hover
        background: contact-hover
      .time
        float:right
        color:time-color
        font-size:11px
      .userpic
        float:left
        margin-right:15px
        img
          width:48px
          height:48px
          border-radius:50%
      .short
        font-size:13px
        overflow:hidden
        .name
          font-weight:bold
          margin:3px 0
          color: contact-name
        .message
          white-space: nowrap
          overflow: hidden
          text-overflow: ellipsis
          margin-top:5px
          color:contact-message
.messages
  float:right
  width:696px
  height:100%
  position:relative
  .history
    position: absolute
    bottom: 179px
    top: 0
    overflow-y: scroll
    ul
      list-style:none;
      margin:0;
      padding:0;
    &::-webkit-scrollbar-track
      background-color: scrollbar-track
      margin-right: 10px
      border-radius: 2px
    &::-webkit-scrollbar
      width: 9px
    &::-webkit-scrollbar-thumb
      background: scrollbar-thumb
    .message-wrapper
      padding:10px
      cursor:pointer
      .message
        width: 530px
        padding: 0 15px
        margin: 0 auto
        display:block
        img
          width:42px
          height:42px
          border-radius:50%
        .short
          font-size:13px
          overflow:hidden
          .name
            font-weight:bold
            margin:3px 0
            color: message-name
            display:inline-block
            &:hover,
            ../../ .time:hover
              text-decoration:underline
          .text
            margin-top:5px
            color: black
            line-height: 150%
        .time
          float:right
          color:time-color
          font-size:11px
        .userpic
          float:left
          margin-right:15px

  .sp-wrapper
    position:absolute
    bottom:0
    .message-sending-panel
      width: 554px
      margin: 0 auto
      padding: 10px 15px
      padding-bottom: 21px
      bottom:0
      .sender-photo
        float:left
      .receiver-photo
        float:right
        & img,
        ../ .sender-photo img
          border-radius:50%
          width:52px
          height:52px
      .message-form
        width: 382px
        left: 70px
        right: 72px
        margin: 0 auto
        textarea
          border: 0
          outline: none
          height: 52px
          resize: none
          width: 100%
          border-bottom: 1px solid textarea-border
          font-family: font
          &:focus
            border-bottom: 2px solid textarea-border-hover
            height:51px
        .attach,
        .media,
        .smiles
          float: left
          margin: 15px
          a
            color: icons
            &:hover
              color:icons-hover
        .smiles a
          padding:0 3px
        button[type=submit]
          color: send
          border: 0
          background: none
          float: right
          padding: 0
          margin-top: 17px
          font-weight: bold
          cursor: pointer
          &:hover
            color: send-hover