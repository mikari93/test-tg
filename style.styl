html
  height:100%
body
  background:#e7ebf0
  font-family: Tahoma, sans-serif, Arial, Helvetica
  margin: 0
  height: calc(100% - 23px)
  padding-bottom: 23px
a
  text-decoration:none
.clearfix
  clear:both
.header
  width:1010px
  background:#5682a3
  font-size: 14px
  line-height: 16px
  margin:0 auto
  a
    color:#fff;
    &:hover
      background:#497799
      color:#fff
.left
  width:313px
.right
  width:697px
.logo
  float:left
  vertical-align: top
  a
    display:block
    padding: 20px 25px
.rest
  float:left
.menu-icon
.search-icon
  float:right
  a
    color:#fff
    display: block
    padding: 20px 25px
.title
  overflow:hidden
  a
    display:block
    padding:20px 25px
    span.lastseen
      font-size:12px
      color:#b9cfe3
.container
  width:1010px
  background:#fff
  margin:0 auto
  border: 1px solid #dfe5ec
  height: calc(100% - 56px)
.contacts
  border-right:1px solid #dfe5ec
  height:100%
  position:relative
  float:left
  .list
    height: calc(100% - 60px)
    overflow-y: scroll
    &::-webkit-scrollbar-track
      background-color: #F5F5F5
      margin-right: 10px
      border-radius: 2px
    &::-webkit-scrollbar
      width: 2px
    &::-webkit-scrollbar-thumb
      background: rgba(137, 160, 179, 0.5)
  .searchbox
    padding: 12px
    input[type=search]
      -webkit-appearance: none
    .searchinput
      font-size: 12px
      border:1px solid #f2f2f2
      border-radius:2px
      padding:10px 20px
      background:#f2f2f2
      width:100%
      outline-width:0
      &:active
      &:focus
        background:#fff
  ul
    list-style:none
    margin:0
    padding:0
    a
      display:block
      padding: 7px 16px
      &:hover
        background: #f2f6fa
      .time
        float:right
        color:#b3b3b3
        font-size:11px
      .userpic
        float:left
        margin-right:15px
        img
          width:48px
          height:48px
          border-radius:50%
      .short
        font-size:13px
        overflow:hidden
        .name
          font-weight:bold
          margin:3px 0
          color:#222
        .message
          white-space: nowrap
          overflow: hidden
          text-overflow: ellipsis
          margin-top:5px
          color:#808080
.messages
  float:right
  width:696px
  height:100%
  position:relative
  .history
    position: absolute
    bottom: 179px
    top: 0
    overflow-y: scroll
    ul
      list-style:none;
      margin:0;
      padding:0;
    &::-webkit-scrollbar-track
      background-color: #F5F5F5
      margin-right: 10px
      border-radius: 2px
    &::-webkit-scrollbar
      width: 9px
    &::-webkit-scrollbar-thumb
      background: rgba(137, 160, 179, 0.5)
    .message-wrapper
      padding:10px
      cursor:pointer
      .message
        width: 530px
        padding: 0 15px
        margin: 0 auto
        display:block
        img
          width:42px
          height:42px
          border-radius:50%
        .short
          font-size:13px
          overflow:hidden
          .name
            font-weight:bold
            margin:3px 0
            color:#3a6d99
            display:inline-block
            &:hover,
            ../ .time:hover
              text-decoration:underline
          .text
            margin-top:5px
            color: #000000
            line-height: 150%
        .time
          float:right
          color:#b3b3b3
          font-size:11px
        .userpic
          float:left
          margin-right:15px

  .sp-wrapper
    position:absolute
    bottom:0
    .message-sending-panel
      width: 554px
      margin: 0 auto
      padding: 10px 15px
      padding-bottom: 21px
      bottom:0
      .sender-photo
        float:left
      .receiver-photo
        float:right
        & img,
        ../ .sender-photo img
          border-radius:50%
          width:52px
          height:52px
      .message-form
        width: 382px
        left: 70px
        right: 72px
        margin: 0 auto
        textarea
          border: 0
          outline: none
          height: 52px
          resize: none
          width: 100%
          border-bottom: 1px solid #e8e8e8
          font-family: Tahoma, sans-serif, Arial, Helvetica
          &:focus
            border-bottom: 2px solid #77b7e4
            height:51px
        .attach,
        .media,
        .smiles
          float: left
          margin: 15px
          a
            color: #b5b5b5
            &:hover
              color:#a3a3a3
        .smiles a
          padding:0 3px
        button[type=submit]
          color: #499dd9
          border: 0
          background: none
          float: right
          padding: 0
          margin-top: 17px
          font-weight: bold
          cursor: pointer
          &:hover
            color: #3589c5